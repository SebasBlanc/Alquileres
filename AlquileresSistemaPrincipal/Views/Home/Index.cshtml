@{
    ViewData["Title"] = "Home Page";
}

@model List<AlquileresSistemaPrincipal.Models.PropiedadDto>

<h1 class="text-center">Propiedades en Alquiler</h1>

<div class="row">
    @foreach (var propiedad in Model)
    {
        <div class="card">
            <h2>@propiedad.Nombre</h2>
            <p>@propiedad.Direccion</p>
            <p>@propiedad.Descripcion</p>
            <p>₡@propiedad.Precio</p>
            <img src="@propiedad.ImagenUrl" alt="Imagen de @propiedad.Nombre" width="200" />

            <form asp-controller="Propiedades" asp-action="Eliminar" asp-route-id="@propiedad.Id" method="get">
                <button type="submit">Eliminar</button>
            </form>

            <form asp-action="Detalles" asp-route-id="@propiedad.Id">
                <button type="submit">Ver detalles</button>
            </form>




        </div>
    }

</div>